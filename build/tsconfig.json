{
	"compilerOptions": {
		"outDir": "../compiled",
		"allowJs": true,
		"lib": [
			"es2021"
		],
		"watch": true,
		"module": "commonjs",
		"target": "es2021",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"../src/**/*"
	],
	"exclude": [
		"**/*.spec.ts"
	]
}